<div class="d-flex">
  <div class="output_card">
    <%= video_tag source, height: 1080, width: 1920, controls: false, autoplay: true, muted: true %>
    <div class="button_container d-flex justify-content-center border-0">
      <%= link_to '/', class: 'link yt' do %><i class="fa-brands fa-youtube"></i><% end %>
      <%= link_to '/', class: 'link insta' do %><i class="fa-brands fa-instagram"></i><% end %>
      <%= link_to '/', class: 'link tiktok' do %><i class="fa-brands fa-tiktok"></i><% end %>
      <%= link_to download_video_path, class: 'li download' do %><i class="fa-solid fa-download"></i><% end %>
    </div>
  </div>
</div>
url = video.download_url
new_file_path = "#{Rails.root.to_s}/public/users/familyvideos/thumbs/your_video.mp4"
open(new_file_path, "wb") do |file|
file.print open(url).read
end
